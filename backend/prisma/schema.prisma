generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserType {
  USER
  ADMINISTRATOR
  ORGANIZATION_OWNER
}

enum UserStatus {
  ACTIVE
  SUSPENDED
  EXPIRED
}

model User {
  id                 String     @id @default(uuid())
  organizationId     String
  displayName        String
  userId             String     @unique
  userType           UserType   @default(USER)
  password           String
  accountValidFrom   DateTime   @default(now())
  accountValidUntil  DateTime?
  status             UserStatus @default(ACTIVE)
  createdAt          DateTime   @default(now())
  updatedAt          DateTime   @updatedAt
  preferences        UserPreferences?
}

model UserPreferences {
  id              String   @id @default(uuid())
  userId          String   @unique
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  theme           String   @default("light")
  datetimeFormat  String   @default("ISO")
  mapPreferences  String?  // JSON string for map preferences (colors, etc.)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model SavedPlace {
  id          String   @id @default(uuid())
  userId      String
  name        String
  lon         Float
  lat         Float
  icon        String   @default("üìç")
  color       String   @default("#ef4444")
  geojson     String?  // Full GeoJSON content if needed
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([userId])
}

model SavedRoute {
  id          String   @id @default(uuid())
  userId      String
  name        String
  originName  String
  originLon   Float
  originLat   Float
  destName    String
  destLon     Float
  destLat     Float
  stops       String?  // JSON array of stops
  distance    String
  duration    String
  coordinates String   // JSON array of route coordinates
  geojson     String?  // Full GeoJSON content if needed
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([userId])
}
